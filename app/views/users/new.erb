<% if @errors %>
  <div><span>Something went wrong...</span>
    <ul>
      <% @errors.each do |error| %>
        <li>- <%= error %></li>
        <% end %>
    </ul>
  </div>
<% end %>
<form method="post" action="/users">
    <label for="user_name_input">Username: </label>
    <input id="user_name_input" name="user[name]" type="text" value="">

    <label for="user_password_hash_input">Password: </label>
    <input id="user_password_hash_input" name="user[password_hash]" type="text" value="">

    <input type="submit" value="Sign up!" class="button">
</form>